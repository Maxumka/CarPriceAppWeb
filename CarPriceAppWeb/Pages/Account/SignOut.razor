@page "/account/signout"

@inject ICarPriceService CarPriceService

<h4>Sign Out</h4>

<p>Are you sure you want to sign out?</p>

<button class="btn btn-primary" @onclick="SignOuting">Yes</button>
<NavLink href="calculate/carprice" class="btn btn-link">Cancel</NavLink>

@code {
    private void SignOuting()
    {
        CarPriceService.SignOut();
    }
}
