@page "/account/signup"

@inject CarPriceHttpClient HttpClient

<div class="card">
    <h4 clas="card-header">Sign Up</h4>
    <div class="card-body">
        <EditForm Model="@user">
            <div class="form-group">
                <label>Login</label>
                <InputText class="form-control" @bind-Value="@user.Login"/>
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText class="form-control" @bind-Value="@user.Password"/>
            </div>
            <button class="btn btn-primary" @onclick="SignUping">Sign Up</button>
            <NavLink href="account/signin" class="btn btn-link">Cancel</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private UserModel user = new();

    private async Task SignUping()
    {
        await HttpClient.SignUp(user);

        if (CarPriceHttpClient.IsSignIned)
        {
            
        }
    }
}