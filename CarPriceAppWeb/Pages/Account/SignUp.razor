@page "/account/signup"

@inject NavigationManager NavManager
@inject ICarPriceService CarPriceService

<div class="card">
    <h4 clas="card-header">Sign Up</h4>
    <div class="card-body">
        <EditForm EditContext="editContext">
            <DataAnnotationsValidator/>

            <div class="form-group">
                <label>Login</label>
                <InputText class="form-control" @bind-Value="@user.Login"/>
                <ValidationMessage For="() => user.Login"/>
            </div>
            <div class="form-group">
                <label>Password</label>
                <InputText class="form-control" @bind-Value="@user.Password" type="password"/>
                <ValidationMessage For="() => user.Password"/>
            </div>
            <button class="btn btn-primary" @onclick="SignUping">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Sign Up
            </button>
            <NavLink href="account/signin" class="btn btn-link">Cancel</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private UserModel user = new();
    private EditContext editContext;
    private bool isLoading = false;

    protected override void OnInitialized()
    {
        editContext = new(user);
    }

    private async Task SignUping()
    {
        if (editContext.Validate())
        {
            isLoading = true;

            var isSignUp = await CarPriceService.SignUpAsync(user);

            if (isSignUp)
            {               
                NavManager.NavigateTo("account/signin");
            }

            isLoading = false;
        }
    }
}