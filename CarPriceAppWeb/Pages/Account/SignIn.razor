@page "/"
@page "/account/signin"

@inject NavigationManager NavManager
@inject ICarPriceService CarPriceService
@inject LocalStorageService LocalStorage
@inject AlertService AlertService


<h4>Вход</h4>
<div class="card border-primary mb-3 rounded">
    <div class="card-body">
        <EditForm EditContext="@editContext">
            <DataAnnotationsValidator/>

            <div class="form-group">
                <InputText class="form-control" @bind-Value="@user.Login" placeholder="Логин"/>
                <ValidationMessage For="() => user.Login"/>
            </div>
            <div class="form-group">
                <InputText class="form-control" @bind-Value="@user.Password" type="password" placeholder="Пароль"/>
                <ValidationMessage For="() => user.Password"/>
            </div>
            <button class="btn btn-primary" @onclick="SignIning">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Войти
            </button>
            <NavLink href="account/signup" class="btn btn-link">Зарегистрироваться</NavLink>
        </EditForm>
    </div>
</div>

@code {
    private UserModel user = new();
    private EditContext editContext;
    private bool isLoading = false;

    protected override void OnInitialized()
    {
        editContext = new(user);
    }

    private async Task SignIning()
    {
        if (!editContext.Validate()) return;

        isLoading = true;

        await CarPriceService.SignInAsync(user);
  
        isLoading = false;
    }
}
