@page "/calculate/carprice"

@inject ICarPriceService CarPriceService

<div class="card">
    <h4 clas="card-header">Car price</h4>
    <div class="card-body">
        <EditForm EditContext="@editContext">
            <DataAnnotationsValidator/>

            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label>Company</label>
                        <InputText class="form-control" @bind-Value="@car.Company"/>
                        <ValidationMessage For="() => car.Company"/>
                    </div>  
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Model</label>
                        <InputText class="form-control" @bind-Value="@car.Model"/>
                        <ValidationMessage For="() => car.Model"/>
                    </div>  
                </div>
            </div>

            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label>Mileage</label>
                        <InputNumber class="form-control" @bind-Value="@car.Mileage"/>
                        <ValidationMessage For="() => car.Mileage"/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Year</label>
                        <InputNumber class="form-control" @bind-Value="@car.Year"/>
                        <ValidationMessage For="() => car.Year"/>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="col">
                    <div class="form-group">
                        <label>Engine Power</label>
                        <InputNumber class="form-control" @bind-Value="@car.EnginePower"/>
                        <ValidationMessage For="() => car.EnginePower"/>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label>Engine Volume</label>
                        <InputNumber class="form-control" @bind-Value="@car.EngineVolume"/>
                        <ValidationMessage For="() => car.EngineVolume"/>
                    </div>
                </div>
            </div>
             
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" @bind-value="@car.Transmission">
                    <label class="form-check-label" for="gridCheck">Is automatic transmission?</label>
                </div>
            </div>
            
            <h4>Price: @price</h4>

            <button class="btn btn-primary" @onclick="GetPrice">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm mr-1"></span>
                }
                Calculate price
            </button>
        </EditForm>
    </div>
</div>

@code {
    private EditContext editContext;

    private CarPriceModel car = new();

    private bool isLoading = false;

    private int price = 0;

    protected override void OnInitialized()
    {
        editContext = new(car);
    }

    private async Task GetPrice()
    {
        if (!editContext.Validate()) return;

        isLoading = true;

        price = await CarPriceService.GetPriceAsync(car);

        if (price is not 0)
        {
            StateHasChanged();
        }
        
        isLoading = false;
    }
}
